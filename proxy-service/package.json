
{
  "name": "pcrm-proxy-service",
  "version": "2.0.0",
  "description": "Proxy service for legacy PostgreSQL connections - Railway optimized",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "railway:start": "node server.js",
    "railway:build": "echo 'Railway build complete - v2.0'"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "railway": {
    "build": {
      "command": "npm run railway:build"
    },
    "start": {
      "command": "npm start"
    },
    "healthcheckPath": "/",
    "healthcheckTimeout": 30
  }
}
